@model List<ApplicationRole>

@{
    ViewData["Title"] = "Manage Roles";
}

<div>
    <div>
        <h1>Manage Roles</h1>
        <hr />
    </div>
    <div class="d-flex ms-xl-5 me-xl-5 align-items-center flex-column">
        @if (Model.Count == 0)
        {
            <div class="d-flex justify-content-center align-items-center">No roles!</div>
        }
        else
        {
            @foreach (var role in Model)
            {
                <partial name="_ManageRolePartial" model="@role" />
            }
            <div class="d-flex justify-content-center align-items-center w-100 mt-lg-3">
                <a class="btn btn-primary w-50" asp-area="Administration" asp-controller="Admin" asp-action="CreateRole">+ Add Role</a>
            </div>
        }
    </div>
</div>