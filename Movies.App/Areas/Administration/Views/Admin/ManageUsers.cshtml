@model List<ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<div>
    <div>
        <h1>Manage Users</h1>
        <hr />
    </div>
    <div class="d-flex ms-xl-5 me-xl-5 align-items-center flex-column">
        @if (Model.Count == 0)
        {
            <div class="d-flex justify-content-center align-items-center">No users!</div>
        }
        else
        {
            @foreach (var user in Model)
            {
                <partial name="_ManageUserPartial" model="@user" />
            }
            <div class="d-flex justify-content-center align-items-center w-100 mt-lg-3">
                <a class="btn btn-primary w-50" asp-area="Administration" asp-controller="Admin" asp-action="CreateUser">+ Add User</a>
            </div>
        }
    </div>
</div>