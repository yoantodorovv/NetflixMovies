@model Movies.Models.Models.Identity.ApplicationRole

<div class="d-flex w-100 pb-xl-2 border-bottom justify-content-between">
    <div class="d-flex justify-content-center flex-column col-7 ms-xl-3">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex align-items-center col-5">
        <a class="btn btn-outline-primary" asp-area="Administration" asp-action="EditRole" asp-controller="Admin" asp-route-id="@Model.Id">Edit</a>
        <form class="form-inline" asp-area="Administration" asp-action="DeleteRole" asp-controller="Admin" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>