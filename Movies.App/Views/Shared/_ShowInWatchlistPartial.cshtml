@model WatchlistShowDto

@{
    var imageUrl = "https://i.pinimg.com/736x/72/a0/50/72a0500ff35991d147a6b48e4bffc721.jpg";
}

<div class="d-flex w-100 pb-xl-2 border-bottom">
    <div class="d-flex justify-content-center align-items-center col-3">
        <img src="@imageUrl" class="card-img-top w-50" alt="@Model.Title" />
    </div>
    <div class="d-flex justify-content-center flex-column col-6 ms-xl-3">
        <h3>@Model.Title</h3>
        <p>@Model.Type</p>
    </div>
    <div class="d-flex align-items-center col-3">
        <a class="btn btn-primary" href="@Url.Action("Remove", "Watchlist", new { idRaw = Model.Id.ToString() })">Remove</a>
    </div>
</div>